<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Registro</h1>

        <form action="/signup" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="file" name="photo">
            </div>
            <div class="form-group">
                <input name="username" type="text" class="form-control" id="field1" placeholder="User Name">
            </div>
            <div class="form-group">
                <input name="email" type="text" class="form-control" id="field2" placeholder="Email Address">
            </div>
            <div class="form-group">
                <input name="longitude" type="text" class="form-control" id="field3" placeholder="location">
            </div>
            <div class="form-group">
                <input name="latitude" type="text" class="form-control" id="field3" placeholder="location">
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" id="field3" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">CREATE ACCOUNT</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Already have an account?<a href="/login">Sign In</a></p>
    </div>
</div>