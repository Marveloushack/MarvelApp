<div class="headerimg">
    <h1>My Favorites</h1>
</div>
<div class="container">
    <div class="hero_my_comics">

    </div>
    <section>
        <div class="btn-group" id="buttons_comics" role="group" aria-label="Basic example">
            <button id="theButton" type="button" class="btn btn-secondary">Characters</button>
            <button id="theButton-comics" type="button" class="btn btn-secondary">Comics</button>
            <button id="theButton-series" type="button" class="btn btn-secondary">Series</button>
        </div>
    </section>
    <section>
        <div class="textInput">
            <input id="theInput-character" class="form-control" type="text"
                placeholder="Search your favorite character">
            <input id="theInput-comics" class="form-control" type="text" placeholder="Search your favorite comic">
            <input id="theInput-series" class="form-control" type="text" placeholder="Search your favorite serie">
        </div>
    </section>
    <section>
        <div class="character-preferences">
            <br>
            <h4>Selected characters:</h4>
            <hr>
            <br>
            {{!-- <button type="button" class="btn btn-outline-danger"></button> --}}
        </div>
        <div class="comics-preferences">
            <br>
            <h4>Selected comics:</h4>
            <hr><br>
        </div>
        <div class="series-preferences">
            <br>
            <h4>Selected series:</h4>
            <hr>
        </div>
    </section>
    <div>
        <a href="/profile" id="user-Character" class="button2">Back</a>
        <a id="safeButton" type="button" class="button2">Save</a>
    </div>
</div>

<div class="modal" id="modal-save" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Done!</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>Your selections have been saved!</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



